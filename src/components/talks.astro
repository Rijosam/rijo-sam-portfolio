---
import { Talk, upcomingTalks, pastTalks } from "@/data/talks";

const INITIAL_TALKS_TO_SHOW = 6;

const chipStyles: Record<Talk["type"], string> = {
  Conference: "bg-sky-600 hover:bg-sky-700 text-white",
  Workshop: "bg-amber-500 hover:bg-amber-600 text-black",
  Meetup: "bg-purple-600 hover:bg-purple-700 text-white",
};

const talksToShow = [...upcomingTalks, ...pastTalks].slice(0, INITIAL_TALKS_TO_SHOW);
---

<section id="talks" class="py-12 border-t border-[#ffffff10] text-[var(--white)]">
  <div class="max-w-6xl mx-auto px-6 py-12 md:py-16">
    <h2 class="text-4xl md:text-4xl font-medium text-[var(--sec)] mb-10 shiny-sec">My Talks</h2>
   <!-- <h2 class="text-lg text-[var(&#45;&#45;sec)] mb-2 shiny-sec">My Talks</h2>-->
  <!--  <h3 class="text-4xl md:text-5xl font-medium mb-10">Speaking Engagements</h3>-->

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {
        talksToShow.map((talk) => (
          <div class="relative flex flex-col bg-[#181818] border border-[var(--white-icon-tr)] rounded-2xl shadow-lg hover:shadow-xl transition-shadow duration-300 p-6">
            <div class="flex-grow">
              {/* Event name gets top priority */}
              <div class="mb-3">
                <h3 class="text-1xl md:text-2xl font-bold mb-1 text-[var(--white)] leading-tight">{talk.event}</h3>
                <div class="flex items-center gap-3 mb-2">
                  {talk.status === "Upcoming" && (
                    <span class="inline-block bg-green-500 text-white text-xs font-semibold px-3 py-1 rounded-full shadow-md hover:scale-105 hover:brightness-110 transition-all duration-200 ease-in-out cursor-default">
                      UPCOMING
                    </span>
                  )}
                  <span class={`inline-block text-xs font-semibold px-3 py-1 rounded-full ${chipStyles[talk.type]}`}>{talk.type}</span>
                </div>
              </div>

              {/* Talk title is secondary */}
              <h4 class="text-lg font-medium mb-4 text-[var(--white-icon)] leading-relaxed">{talk.title}</h4>

              <div class="space-y-2 mb-4 text-[var(--white-icon)] text-sm">
                <div class="flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5 mr-2 opacity-80">
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5m-9-3.75h.008v.008H12v-.008Z"
                    />
                  </svg>
                  <span class="font-medium">{talk.date}</span>
                </div>
                <div class="flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5 mr-2 opacity-80">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
                  </svg>
                  <span class="font-medium">{talk.location}</span>
                </div>
              </div>

              {talk.description && <p class="text-sm text-[var(--white-icon)] opacity-90 mb-4 leading-relaxed">{talk.description}</p>}
            </div>

            <div class="mt-auto pt-4 flex items-center gap-3">
              <a
                target="_blank"
                rel="noopener noreferrer"
                href={talk.primaryLink}
                aria-label={talk.primaryLinkAriaLabel}
                class="flex-grow text-center px-5 py-2.5 text-sm font-medium text-[var(--white)] bg-[var(--sec)] hover:bg-opacity-80 rounded-lg transition-colors duration-300 focus:ring-4 focus:outline-none focus:ring-[var(--sec-light)]"
              >
                {talk.primaryLinkText}
              </a>
            </div>
          </div>
        ))
      }
    </div>
    <div class="mt-10 text-center">
      <a
        href="/talks"
        id="view-more-talks-btn"
        class="px-6 py-3 text-sm font-medium text-[var(--white)] bg-[var(--sec)] hover:bg-opacity-80 rounded-lg transition-colors duration-300 focus:ring-4 focus:outline-none focus:ring-[var(--sec-light)]"
      >
        View More Talks
      </a>
    </div>
  </div>
</section>
