---
import Socials from "./socials.astro";
---

<section class="text-[var(--white)] min-h-screen flex items-center" id="home">
  <div class="max-w-6xl mx-auto px-6 py-12 md:py-24">
    <!-- Main container with improved spacing -->
    <div class="grid lg:grid-cols-12 gap-8 lg:gap-16 items-center">
      <!-- Left Column: Main Content -->
      <div class="lg:col-span-7 space-y-8">
        <!-- Mobile Profile Image -->
        <!--<div class="flex lg:hidden justify-center mb-8">
          <div class="relative">
            &lt;!&ndash; Background decoration &ndash;&gt;
            <div class="absolute inset-0 w-40 h-40 rounded-full bg-gradient-to-br from-[var(&#45;&#45;sec)]/20 via-purple-500/10 to-transparent blur-xl"></div>
            <div class="absolute inset-4 rounded-full border border-[var(&#45;&#45;sec)]/30 animate-pulse"></div>

            &lt;!&ndash; Profile Image &ndash;&gt;
            <div class="relative w-32 h-32 rounded overflow-hidden border-4 border-[var(&#45;&#45;sec)]/50 shadow-2xl shadow-purple-500/25">
              <img
                src="https://avatars.githubusercontent.com/u/41123034?v=4"
                alt="Rijo Sam - Software Developer"
                class="w-full h-full object-cover hover:scale-110 transition-transform duration-500"
              />
            </div>
          </div>
        </div>-->

        <!-- Enhanced title section -->
        <div class="space-y-4">
          <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold leading-tight text-center lg:text-left">
            <span class="block">
              <span class="text-[var(--sec)] shiny-sec">Rijo Sam</span>
            </span>
          </h1>
          <div class="w-24 h-1 bg-gradient-to-r from-[var(--sec)] to-purple-400 rounded-full mx-auto lg:mx-0"></div>
        </div>

        <!-- Greeting with better styling
        <div class="relative text-center lg:text-left">
          <p class="text-lg md:text-xl text-[var(--white-icon)] shiny-white font-light tracking-wide">Hi there, I'm Rijo ðŸ‘‹</p>
          <div class="absolute -left-4 top-0 w-1 h-full bg-gradient-to-b from-[var(--sec)] to-transparent rounded-full opacity-60 hidden lg:block"></div>
        </div> -->

        <!-- Enhanced description -->
        <div class="space-y-6 max-w-2xl mx-auto lg:mx-0 text-center lg:text-left">
          <p class="text-lg md:text-xl text-[var(--white-icon)] leading-relaxed">
            I am a
            <span class="text-[var(--sec)] font-semibold">Senior Java Developer</span>
            and
            <span class="text-[var(--sec)] font-semibold">Public Speaker</span>. Currently, I work as a Java Chapter Lead at
            <span class="text-white font-medium">ABN AMRO Bank</span>
            in the Netherlands. I have extensive experience in developing applications within the payments and credits sector of the banking domain.
          </p>
          <p class="text-base md:text-lg text-[var(--white-icon)] opacity-80">
            Originally from India, I'm now settled in the Netherlands. I enjoy Java, cycling, and burgers. So if any of those interest you, feel free to connect with me!
          </p>
        </div>

        <!-- Social links for mobile/tablet & desktop -->
        <div class="space-y-6 text-center lg:text-left">
          <Socials />
        </div>
      </div>

      <!-- Right Column: Profile Image (Desktop Only) -->
      <div class="hidden lg:flex lg:col-span-5 flex-col items-center space-y-8">
        <!-- Profile Image with decorative elements -->
        <div class="relative">
          <!-- Background decoration -->
          <div class="absolute inset-0 w-72 h-72 rounded-full bg-gradient-to-br from-[var(--sec)]/20 via-purple-500/10 to-transparent blur-xl"></div>
          <div class="absolute inset-8 rounded-full border border-[var(--sec)]/30 animate-pulse"></div>

          <!-- Profile Image -->
          <div class="relative w-64 h-64 rounded-full overflow-hidden border-4 border-[var(--sec)]/50 shadow-2xl shadow-purple-500/25">
            <img
              src="https://res.cloudinary.com/dnmuyrcd7/image/upload/f_auto,q_auto/v1/rijo/jomlf2etjmhosioucdhv"
              alt="Rijo Sam - Software Developer"
              class="w-full h-full object-cover hover:scale-110 transition-transform duration-500"
            />
          </div>
        </div>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="flex justify-center mt-16 lg:mt-24">
      <div class="animate-bounce cursor-pointer">
        <svg class="w-6 h-6 text-[var(--white-icon)] hover:text-[var(--sec)] transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
      </div>
    </div>
  </div>
</section>
